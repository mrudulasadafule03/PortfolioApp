<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/bg_color">

    <!-- MAIN CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:background="@color/bg_color">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="84dp"
            android:layout_height="120dp"
            android:src="@drawable/profile"
            android:scaleType="fitCenter"
            android:background="@drawable/profile_square"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mrudula Sadafule"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/profileUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B.Tech. Student"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:alpha="0.7" />

        <!-- Social Icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/linkedinIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_linkedin"
                android:layout_marginEnd="12dp"/>

            <ImageView
                android:id="@+id/githubIcon"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/ic_github"
                android:layout_marginEnd="12dp"/>
        </LinearLayout>

        <!-- Tabs -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"
            app:tabGravity="center"
            android:layout_marginTop="16dp"
            android:background="@color/bg_color"
            app:tabTextColor="@color/text_color"
            app:tabSelectedTextColor="@color/text_color" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

    <!-- ðŸŒ— LIGHT / DARK MODE BUTTON (TOP RIGHT) -->
    <ImageButton
        android:id="@+id/btnThemeToggle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|end"
        android:layout_margin="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_dark_mode"
        android:contentDescription="Toggle Theme"
        app:tint="@color/text_color"/>
</FrameLayout>
