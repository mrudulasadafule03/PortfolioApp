<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#212529">

        <!-- Card Content Wrapper (IMPORTANT FIX) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Short description -->
            <TextView
                android:id="@+id/resumeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View or download my resume in PDF format."
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <!-- Buttons container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- View Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/viewResume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View"
                    android:textColor="@android:color/white"
                    app:backgroundTint="#343a40"
                    app:cornerRadius="16dp"
                    android:layout_marginEnd="16dp"
                    app:rippleColor="@android:color/white"/>

                <!-- Download Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/downloadResume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download"
                    android:textColor="@android:color/white"
                    app:backgroundTint="#343a40"
                    app:cornerRadius="16dp"
                    app:rippleColor="@android:color/white"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
